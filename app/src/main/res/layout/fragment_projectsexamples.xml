<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mashrooaaleed_kiswat_shocolate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".projectsexamples">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mashroo1ramadan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مشروع توزيع طرود في رمضان"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/masrooa1imageramadanbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/mashroaa2aleed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مشاريع الاعياد"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:src="@drawable/sweetaeed" />

                <TextView
                    android:id="@+id/mashrooa3_playwithmw_maysan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مشروع اعطيني العب"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="392dp"
                    android:layout_height="168dp"
                    android:src="@drawable/takemeplay" />

                <TextView
                    android:id="@+id/mashrooayateemaraby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مشروع مونديال اليتيم العربي"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/mondyal_btn"
                    android:layout_width="391dp"
                    android:layout_height="247dp"
                    android:src="@drawable/mondyal" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>